{
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "25mb",
        "runtime": "python3.9",
        "includeFiles": ["templates/**", "static/**"]
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1",
      "headers": {
        "Cache-Control": "public, max-age=86400",
        "Content-Type": "text/css"  // For CSS files
      }
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}
